using System;

namespace Lista2
{
    class Program
    {

        static void Main(string[] args)
        {
            decimal numero;
            decimal resultado;

            Console.Write("Escreva um numero: ");
            numero = Convert.ToDecimal(Console.ReadLine());

            resultado = Convert.ToDecimal(numero%2);

            if (resultado == 0)
            {
                Console.WriteLine("Este numero e inteiro");
            }
            if (resultado == 1)
            {
                Console.WriteLine("Este numero e inteiro");
            }
            else
            {
                Console.WriteLine("Este numero nao e inteiro");
            }

            Console.ReadLine();

        }
    }
}
