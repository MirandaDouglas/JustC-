using System;

namespace Lista2
{

    class Program
    {

        static void Main(string[] args)
        {
            double numero1;
            double numero2;
            double numero3;

            Console.WriteLine("Digite um numero: ");
            numero1 = Convert.ToDouble(Console.ReadLine());
            Console.WriteLine("Digite um numero: ");
            numero2 = Convert.ToDouble(Console.ReadLine());
            Console.WriteLine("Digite um numero: ");
            numero3 = Convert.ToDouble(Console.ReadLine());

            double somatoria1 = (numero2 + numero3);

            if (numero1 < somatoria1)
            {
                Console.WriteLine("Seu primeiro numero e MENOR que a somatoria dos outros dois");
            }

            else
            {
                Console.WriteLine("Seu primeiro numero e MAIOR que a somatoria dos outros dois");
            }

            Console.ReadLine();

        }
    }
} 
